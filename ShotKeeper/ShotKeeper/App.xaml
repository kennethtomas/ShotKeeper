<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
                        x:Class="ShotKeeper.App">
  <Application.Resources>
    <ResourceDictionary>
      <Style x:Key="MediumButtonStyle" TargetType="Button">
        <Setter  Property="FontSize" Value="75" />
      </Style>
      <Style x:Key="SmallButtonStyle" TargetType="Button">
        <Setter  Property="FontSize" Value="20" />
      </Style>
      <Style x:Key="LargeFontStyle" TargetType="Label">
        <Setter  Property="FontSize" Value="110" />
      </Style>
      <Style x:Key="MediumFontStyle" TargetType="Label">
        <Setter  Property="FontSize" Value="60" />
      </Style>
      <Style x:Key="SmallFontStyle" TargetType="Label">
        <Setter  Property="FontSize" Value="55" />
      </Style>
    </ResourceDictionary>
  </Application.Resources>
</prism:PrismApplication>